<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dotafriendly.usth.edu.vn.dotafriendly.AbaddonInfo"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="9dp">

    <!--<ScrollView-->
    <!--android:layout_width="368dp"-->
    <!--android:layout_height="495dp"-->
    <!--tools:layout_editor_absoluteX="10dp"-->
    <!--tools:layout_editor_absoluteY="9dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="142dp"
                android:layout_height="79dp"
                app:srcCompat="@drawable/abaddon_full" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:text="  Abaddon"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Melee, Carry,"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="  Durable, Support" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="157dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/abbadonstat" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="164dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/abbadontree"
                android:layout_weight="0.16" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Hero Ability" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="322dp"
                android:layout_height="167dp"
                app:srcCompat="@drawable/abbadonq" />

            <ImageView
                android:layout_width="322dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/abbadonw" />

            <ImageView
                android:layout_width="323dp"
                android:layout_height="176dp"
                app:srcCompat="@drawable/abbadone" />

            <ImageView
                android:layout_width="323dp"
                android:layout_height="246dp"
                app:srcCompat="@drawable/abbadonr" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
